<div class="Login-container">
  <img src="Assets/images/Images/2020-11-10-georgian-college.jpg" alt="gerogian college barrie campus" class="login-image">
  
  <form class="Login-form" method="post">
    <h1 class="Loginh1">Register</h1>

      {{#if messages}} 
         <h3 class="alert alert-danger">{{messages}}</h3>
      {{/if}}

    {{!-- <label for="email">Email : </label>
